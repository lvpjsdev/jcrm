generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(uuid())
  telegram     String        @unique
  email        String?       @unique
  startDate    DateTime?
  period       Int?
  password     String
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  keys         KeysOnUsers[]
  serialNumber Int           @unique @default(autoincrement())
}

model Key {
  id           String        @id @default(uuid())
  key          String        @unique
  name         String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  users        KeysOnUsers[]
  serialNumber Int           @unique @default(autoincrement())
}

model KeysOnUsers {
  userId String
  keyId  String
  user   User   @relation(fields: [userId], references: [id])
  key    Key    @relation(fields: [keyId], references: [id])

  @@id([userId, keyId])
}
